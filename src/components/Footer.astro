---
import Social from '../components/Social.astro';
---
<section> 
  <footer>
    <Social icon="ph-envelope" color="var(--melon)" link="mailto:jayden.alchin@gmail.com" />
    <Social icon="ph-github-logo" color="var(--peach)" link="https://github.com/jaydenalchin" />
    <Social icon="ph-linkedin-logo" color="var(--ice)" link="https://linkedin.com/in/jaydenalchin" />
    <Social icon="ph-x-logo" color="var(--latte)" link="https://x.com/jaydenalchin" />
  </footer>
  <div class="blob-bg"></div>
</section>

<style> 
  section {
    position: relative;
  }

  footer {
    display: flex;
    gap: 2rem;
    padding: 3rem 8rem;
    margin-top: 5rem;
    border-radius: 99rem 99rem 0 0;
    background-color: white;
    z-index: 80;
    a {
     text-decoration: none;
    }
    * {
      transition: transform 250ms ease;
      &:hover {
          transform: translateY(-6px);
          opacity: 0.8;
      }
    }
  }
  
  /* Background blob */
  .blob-bg {
    position: absolute;
    bottom: 5%;
    right: 5%;
    width: 90%;
    height: 12rem;
    z-index: -1;
    background: radial-gradient(circle at 30% 30%, var(--peach), var(--melon), var(--peach));
    filter: blur(100px);
    border-radius: 100%;
    animation: blob-breathe 4s ease-in-out infinite alternate;
  }

  /* Breathing keyframes */
  @keyframes blob-breathe {
    0% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(0.75, 1.25) translate(0rem, -1.25rem);
      opacity: 0.3;
    }
    100% {
      transform: scale(1.125, 0.825);
      opacity: 0.6;
    }
  }

  @media screen and (max-width: 698px){
    footer {
      padding: 4rem 1rem;
      background-color: transparent;
    }
    .blob-bg {
      height: 6rem;
      width: 90%;
      bottom: 20%;
    }
  }
</style>