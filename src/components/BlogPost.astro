---
const { title, description, url, color } = Astro.props;
---

<a href={url}>
    <article class="glass-card">
        <h3>{title}</h3>
        <p>{description}</p>
    </article>
</a>

<style define:vars={{color}}> 
    a {
        text-decoration: none;
        color: black;
        border-width: 4px;
        border-color: white;
    }
    h3 {
        margin-bottom: 0;
    }
    p {
        margin-top: 0;
    }
    .glass-card {
        background:linear-gradient(to bottom right, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.05));
        backdrop-filter: blur(15px) saturate(150%);
        -webkit-backdrop-filter: blur(15px) saturate(150%); /* for Safari */
        border: 2px solid rgba(255, 255, 255, 0.4);
        border-radius: 8px;
        padding: 0.25rem 2rem;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        transition: transform 250ms ease, box-shadow 250ms ease;
    }
    .glass-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.2);
        background-color: rgba(255, 161, 153, 0.05);
    }
</style>